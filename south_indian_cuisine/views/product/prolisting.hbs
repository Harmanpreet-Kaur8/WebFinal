<section id="showcase">
  <div class="container">
    <h1>Our meal packages</h1>
  </div>
</section>
<section id="line">
  <b>
    <p>Craving for Healthy food!
      pick you package and choose you meal for a healthy life.
    </p>
  </b>
</section>
{{#if (eq user.role "clerk")}}
<a href="/add/meal/package" class="btn btn-primary">Add Meal Package</a>
{{/if}}
<section id="Boxes">
  <div class="row">
    {{#each meals}}
    <a href="/view/product/{{this._id}}">
      <div class="column">
        <br>
        <img src="data:image/{{this.mealImage.contentType}};base64,{{this.mealImage.data}}">
        <b>
          <center>{{this.name}}</center>
        </b>
        <br>
        category: {{this.category}} <br>
        Meal Count: {{this.mealCount}} <br>
        Price: {{this.price}} <br><br>
        {{#if (eq ../user.role "clerk")}}
        <a href="/edit/meal/package/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/delete/meal/package/{{this._id}}" class="btn btn-primary">Delete</a>
        {{/if}}
      </div>
    </a>
    {{/each}}
  </div>
</section>


