<style>
    .container {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        text-align: center;
    }
</style>
<form action="/update/meal/package/{{meal._id}}" method="POST">
    <div class="container">
        <h1>Edit Meal Package</h1>
        <hr>
        <label for="name"><b> Meal Package Name</b></label>
        <input type="text" placeholder="Enter Name" required value="{{meal.name}}" name="name" id="name">
        <br>
        <label for="price"><b>Price</b></label>
        <input type="text" placeholder="Enter Price" required value="{{meal.price}}" name="price" id="price">
        <br>
        <label for="desc"><b>Description</b></label>
        <input type="text" placeholder="Enter Description" required value="{{meal.description}}" name="description"
            id="desc">
        <br>
        <label for="cat"><b>Category</b></label>
        <input type="text" placeholder="Enter Category" required value="{{meal.category}}" name="category" id="cat">
        <br>
        <label for="mcount"><b>Number of Meals</b></label>
        <input type="number" placeholder="Enter Number of Meals" required value="{{meal.mealCount}}" name="mealCount"
            id="mcount">
        <br>
        {{#if (eq meal.highlight false)}}
        <input type="checkbox" name="highlight" id="highlight">
        {{else}}
        <input type="checkbox" checked name="highlight" id="highlight">
        {{/if}}
        <label for="highlight"><b>Add to Home Page</b></label>
        <br><br>
        <hr>
        <button type="submit" class="registerbtn">Update</button>
    </div>
</form>